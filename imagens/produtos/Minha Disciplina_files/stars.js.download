var starList,
i,
starValue = 0,
starContainer,
starTitle;

function hoverStars(number) {
    starList = document.getElementsByClassName('star');
    for (i = 0; i <= starList.length - 1; i++) {
        if (i <= number) {
            starList[i].classList.add('hover');
        } else if (starList[i].classList.contains('hover')) {
            starList[i].classList.remove('hover');

        }
    }
}

function clearStars() {
    starList = document.getElementsByClassName('star');
    for (i = 0; i <= starList.length - 1; i++) {
        if (starList[i].classList.contains('hover')) {
            starList[i].classList.remove('hover');
        }
    }
}

function setStars(number) {
    starTitle = document.getElementById('eval');
    starList = document.getElementsByClassName('star');
    starContainer = document.getElementsByClassName('stars_container')[0];
    starContainer.classList.add("after");
    document.getElementById("starScore").value = number;
    for (i = 0; i <= starList.length - 1; i++) {
        if (i <= number) {
            starList[i].classList.add('starActive');
        } else if (starList[i].classList.contains('starActive')) {
            starList[i].classList.remove('starActive');
        }
    }
    starValue = number + 1;
    switch (starValue) {
        case 1:
        starTitle.innerHTML = "Muito ruim :(";
        starTitle.style.visibility = "visible";
        break;
        case 2:
        starTitle.innerHTML = "Ruim :/";
        starTitle.style.visibility = "visible";
        break;
        case 3:
        starTitle.innerHTML = "Regular :|";
        starTitle.style.visibility = "visible";
        break;
        case 4:
        starTitle.innerHTML = "Bom :)";
        starTitle.style.visibility = "visible";
        break;
        case 5:
        starTitle.innerHTML = "Excelente :D";
        starTitle.style.visibility = "visible";
        break;
    }
}